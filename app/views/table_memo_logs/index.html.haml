- content_for :title, "#{@table_memo.name} Â« Table Log"
- content_for :header do
  .row.mb-2
    .col
      %h1.m-0.text-nowrap
        = @table_memo.name
        logs

    .col
      %ol.breadcrumb.float-sm-right
        %li.breadcrumb-item
          = link_to root_path do
            %i.fas.fa-home
            Home
        %li.breadcrumb-item
          = link_to @table_memo.database_memo.name, database_memo_path(@table_memo.database_memo.name)
        %li.breadcrumb-item
          = link_to @table_memo.schema_memo.name, database_schema_path(@table_memo.database_memo.name, @table_memo.schema_memo.name)
        %li.breadcrumb-item
          = link_to @table_memo.name, database_schema_table_path(@table_memo.database_memo.name, @table_memo.schema_memo.name, @table_memo.name)
        %li.breadcrumb-item.active
          logs

%ul.timeline
  = render partial: "shared/description_log", collection: @table_memo_logs
  - # The ending icon for the timeline.
  %div
    %i.fas.fa-clock.bg-gray
