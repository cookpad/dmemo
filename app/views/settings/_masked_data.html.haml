.card
  .card-header
    %h2.card-title Masked Data

    - if current_user.admin?
      = link_to new_masked_datum_path, class: "btn btn-secondary btn-sm float-right" do
        %i.fas.fa-plus
        Add Masked Data
  .card-body.p-0
    .table-responsive
      %table.table.table-hover.table-bordered.table-striped{ role: "grid" }
        %thead
          %tr
            %th Database
            %th Table
            %th Column
            %th
        %tbody
          - @masked_data.each do |masked_datum|
            %tr
              %td
                = masked_datum.database_name
              %td
                = masked_datum.table_name
              %td
                = masked_datum.column_name
              %td
                - if current_user.admin?
                  = link_to masked_datum_path(masked_datum), method: :delete, data: { confirm: "Delete masked_data #{masked_datum.pack}?" } do
                    %button.btn.btn-secondary
                      %i.fas.fa-trash

