- content_for :title, "#{@keyword.name} Â« Keyword"
- content_for :header do
  .row.mb-2
    .col
      %h1.m-0.text-nowrap
        = @keyword.name
        = link_to edit_keyword_path(@keyword) do
          %i.fas.fa-pen-to-square

    .col
      %ol.breadcrumb.float-sm-right
        %li.breadcrumb-item
          = link_to root_path do
            %i.fas.fa-home
            Home
        %li.breadcrumb-item
          = link_to "Keywords", keywords_path
        %li.breadcrumb-item.active
          = @keyword.name

.card
  .card-body
    .markdown-block
      = @keyword.description_html
  .card-footer
    = l(@keyword.updated_at)
    - if @keyword.logs.exists?
      = link_to keyword_logs_path(@keyword.id) do
        %i.far.fa-clock
