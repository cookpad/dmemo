  .row.mb-2
    .col
      %h1.m-0.text-nowrap
        = @database_memo.name
        logs

    .col
      %ol.breadcrumb.float-sm-right
        %li.breadcrumb-item
          = link_to root_path do
            %i.fas.fa-home
