%tr
  %td.truncate-td
    = link_to table_memo.name, database_schema_table_path(table_memo.database_memo.name, table_memo.schema_memo.name, table_memo.name)
    - unless table_memo.linked?
      %i.fas.fa-triangle-exclamation{ data: { toggle: "tooltip", placement: "bottom", title: t("unlinked_table") } }
  %td.truncate-td
    - if table_memo.description.present?
      = table_memo.description_text.truncate(200)
